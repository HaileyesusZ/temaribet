*
{
    font-family: "roboto light";
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;   
}

html, body, .row{
    height: 100%;
    padding: 0;
    margin: 0;
    width: 100%; 
}

.container-fluid{
    width: 100%;
    margin: 0;
    padding: 0;
    height: 100%;
}

#type_selection_wrapper{
    margin-top: 5%;
}
#selection_area_wrapper{
    background: #ecf6f8;
    padding: 0;
    height: 80%;
    box-shadow: 0 2px 4px 0 rgba(0,0,0,0.16),0 2px 10px 0 rgba(0,0,0,0.12) !important
}

.list-group{
    height: 100%;
    margin: 0;
    padding: 0;
}

#selection_area_wrapper ul{
    list-style: none;
}

#selection_area_wrapper h5{
    margin-top: 10%;
    margin-bottom: 5%;
    margin-left: 5%;
}

#selection_area_wrapper li{
    padding: 5px 0 5px 5px;
}

.active_ul li:hover{
    background: #89b5b4;
    color: white;    
}

.active_li{
    background: #158480;
    color: white;  
}

.active_ul{
    background: white;
}

.not_active_ul{
    opacity: 0.5;
}

#year_wrapper{
    border-left: 0.5px solid #b7e2e8;
    border-right: 0.5px solid #b7e2e8;
}

#subjects_wrapper{
    border-left: 0.5px solid #b7e2e8;
}


#right_wrapper{
    position: relative;
    top: 40%;
    left: 5%;
}

#no{
    width: 50px;
}

#hr, #mn, #sc{
    width: 50px;
}

#start_btn{
    border-radius: 0;
    width: 100px;
    background: #158480;
    color: white;
}

#start_btn:hover{
    background: #0e4d4b;
}





// Second window styles


#inputs_wrapper{
    display: none;
    position: relative;
    left: 100%;
    
}
 
.attach_btn{
    margin-left: 20px;
    background: white;
    border: 1px #89b5b4 solid;
    font-size: 18px;
    padding: 3px 5px 3px 5px;
}

.attach_btn:hover{
    background: #158480;
    color: white;
    box-shadow: 0 2px 4px 0 rgba(0,0,0,0.16),0 2px 10px 0 rgba(0,0,0,0.12) !important
}

#inputs_wrapper textarea{
    width: 80%;
    margin-bottom: 30px;
}

#editing_wrapper{
    height: 100%;
    padding-top: 5%;
} 

select{
    background: white;
    color: #0e4d4b;
    margin-right: 300px;
}

#save_btn{
    border-radius: 0;
    width: 100px;
    background: #158480;
    color: white;
}

#save_btn:hover{
    background: #0e4d4b;
}

#textarea_wrapper{
    height: 100%; 
}

#preview_textarea{
    padding-top: 20px;
    height: 100%;
    width: 100%;
}